MQ_TRANSFER_SSL_ENABLED=False
MQ_TRANSFER_QUEUE_TRANSFER_READY=/queue/transfer-ready
MQ_TRANSFER_QUEUE_TRANSFER_STATUS=/queue/dropbox-transfer-status

# Process MQ
MQ_PROCESS_HOST=dev_activemq
