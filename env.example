# Flask
DEBUG=True
FLASK_ENV="${DIMS_ENVIRONMENT}"

# MQs
MESSAGE_EXPIRATION_MS=5000

# Transfer MQ
MQ_TRANSFER_HOST=dev_activemq
MQ_TRANSFER_PORT=61613
